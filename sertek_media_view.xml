		<record id="view_res_invoicesss" model="ir.ui.view">
            <field name="name">first.view.inheritance</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_tree"/>
            <field name="arch" type="xml">
				<xpath expr="//field[@name='date_invoice']" position='after'>
					<field name ="cost"/>
					<field name ="profit"/>
					<field name ="money_paid"/>
					<field name="bonus_cost"/>
				</xpath>
			</field>
		</record>
		
		<record id="view_res_invoices" model="ir.ui.view">
            <field name="name">first.view.inheritance</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
				<xpath expr="//notebook/page[@string='Other Info']" position ='after'>
					<page string="pages">
						<group>
							<field name ="cost"/>
							<field name ="profit"/>
							<field name ="money_paid"/>
							<field name="bonus_cost"/>
						</group>	
					</page>
				</xpath>
			</field>
		</record>
		
		
		 <record id="view_account_invoice_search1" model="ir.ui.view">
            <field name="name">invoice trees</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
            	<search string="Search Invoice">
            		<field name="number"/>
					<field name ="cost"/>
					<field name ="money_paid"/>
            		<group expand="0" string="Group By..."> 
                    <filter string="User" icon="terp-gtk-jump-to-rtl" domain="[]" context="{'group_by':'user_id'}"/> 
                     <filter string="Period" icon="terp-gtk-jump-to-rtl" domain="[]" context="{'group_by':'period_id'}"/> 
                    </group> 
            	</search>
            </field>
         </record>
		
		<record id="view_invoice_trees" model="ir.ui.view">
            <field name="name">intellerist Tree View</field>
            <field name="model">account.invoice</field>
			<field name="type">tree</field>
			<field name="priority" eval="1000"/>
            <field name="arch" type="xml">
				<tree string = "Search Invoice">
					<field name="number"/>
					<field name="state" invisible="1"/>
					<field name="user_id"/>
					<field name ="amount_untaxed"/>
					<field name ="cost"/>
					<field name="amount_total"/>
					<field name ="profit"/>
					<field name ="money_paid"/>
				</tree>
			</field>
		</record> 
		
		 <record id="action_invoice_views_custom" model="ir.actions.act_window">
            <field name="name">Action For invoice</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.invoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_invoice_trees"/>
        </record>
        <menuitem id="action_invoice_custom1" name="Invoice Custom" parent="account.menu_finance_receivables" action="action_invoice_views_custom"/>
</data>
</openerp>